@model ReviewWeb.Models.UserModels.LoginViewModel

@{
    ViewData["Title"] = "Login";
}

<h2>Login</h2>

<h4>LoginViewModel</h4>
<hr />
<div class="row">
    <div class="col"></div>
        <div class="col">
            @if (ViewBag.LoginFailed == true)
            {
                @Html.Raw("Neplatné přihlášení");
            }
            <form asp-action="Login" method="post" asp-controller="Login">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Login" class="control-label"></label>
                    <input asp-for="Login" class="form-control" required value="@ViewBag.LoginEmail" />
                    <span asp-validation-for="Login" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Password" class="control-label"></label>
                    <input asp-for="Password" class="form-control" required type="password" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Login" class="btn btn-default" />
                </div>
            </form>
        </div>
    <div class="col"></div>
    </div>

    <div>
        <a asp-action="Index">Back to List</a>
    </div>

    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }
