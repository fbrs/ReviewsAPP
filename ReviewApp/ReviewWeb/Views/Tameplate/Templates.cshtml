
@{
    ViewData["Title"] = "Templates";
}

<center><h2>Templates</h2></center>


<table id="templates" class="display cell-border nowrap" style="width: 100%">
    <thead><tr><th>Template name</th><th></th></tr></thead>
    <tbody>
        @foreach(var t in ViewBag.Templates)
        {
            string del = "/Template/DeleteTemplate?id=" + t.ID;
            string url = "/Template/GetTemplateDetail?id=" + t.ID;
            <tr><td>
                    <a href="@url">@t.Name</a>
                <!--<a href="@Url.Action("GetTemplateDetail","Template", new { id = @t.ID})">@t.Name</a>--></td>
            <td><a class="btn btn-danger" href="@del"><i class="fas fa-trash-alt"></i></a></td>
            </tr>
        }
    </tbody>
</table>
<center>
    <a href="@Url.Action("TameplateCreator","Template")" class="btn btn-primary"><i class="fas fa-plus-circle"></i> Create Template</a>
</center>
<script>
    $(document).ready(function () {
        tbl = $('#templates').DataTable(
            {
                paging: true,
            });
    });
</script>
