@model ReviewWeb.Models.Artifact.IbmUrlViewModel

@{
    ViewData["Title"] = "ReviewSetup";
}

<h2>ReviewSetup</h2>

<h4>IbmUrlViewModel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post" asp-controller="Artifact" asp-action="CheckIbmXml">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" required id="name" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password" class="control-label"></label>
                <input asp-for="Password" class="form-control" type="password" required id="password" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Url" class="control-label"></label>
                <input asp-for="Url" class="form-control" id="url" />
                <span asp-validation-for="Url" class="text-danger"></span>
                <input asp-for="ProjectId" hidden value="@ViewBag.projectId" />
                @if (ViewBag.workProductId != null)
                {
                    <input asp-for="WorkProductId" hidden value="@ViewBag.workProductId" />
                }
            </div>
            <div class="form-group">
                <!--<button type="button" class="btn btn-primary">Download XML</button>-->
                <input type="submit" value="Create" class="btn btn-default" />
                <!--<button type="button" class="btn btn-info btn-lg" data-toggle="modal" data-target="#myModal" onclick="getXmlNodes();">Add work product</button>-->
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>