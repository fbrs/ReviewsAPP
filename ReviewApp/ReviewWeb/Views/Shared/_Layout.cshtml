@using Microsoft.AspNetCore.Http
@inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ReviewWeb</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
            <div class="collapse navbar-collapse" id="navbarTogglerDemo01">

                <a asp-area="" asp-controller="Home" asp-action="Index" class="navbar-brand">ReviewWeb</a>

                @if (@HttpContextAccessor.HttpContext.Session.GetString("SecurityToken") == null)
                {
                    <ul class="navbar-nav mr-auto mt-2 mt-lg-0">
                        <li class="nav-item"><a asp-area="" asp-controller="Login" asp-action="LoginPage" class="nav-link">Login</a></li>
                        <li class="nav-item"><a asp-area="" asp-controller="User" asp-action="RegistrationPage" class="nav-link">Registration</a></li>
                    </ul>
                }
                else
                {
                    <ul class="navbar-nav mr-auto mt-2 mt-lg-0">
                        <li class="nav-item"><a asp-area="" asp-controller="Tameplate" asp-action="TameplateCreator" class="nav-link">Tameplate</a></li>
                        <li class="nav-item"><a asp-area="" asp-controller="Project" asp-action="ShowProjects" class="nav-link">Projects</a></li>
                        <li class="nav-item"><a asp-area="" asp-controller="Review" asp-action="GetMyReviews" class="nav-link">My reviews</a></li>

                    </ul>
                        <ul class="nav navbar-nav navbar-right">
                            <li class="nav-item"><a asp-area="" asp-controller="Home" asp-action="Contact" class="nav-link">@HttpContextAccessor.HttpContext.Request.Cookies["Firstname"] @HttpContextAccessor.HttpContext.Request.Cookies["Lastname"]</a></li>

                            <li class="nav-item"><a asp-area="" asp-controller="Login" asp-action="Logout" class="nav-link">Log out</a></li>
                        </ul>
                }

            </div>
        </div>
    </nav>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; 2019 - ReviewWeb</p>
        </footer>
    </div>

    @RenderSection("Scripts", required: false)
</body>
</html>
